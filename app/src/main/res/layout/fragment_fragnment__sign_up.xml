<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccc"
    android:id="@+id/fragment_SignIn"
    tools:context=".Fragnment_SignUp">


    <LinearLayout

        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите Имя:"
            />
        <EditText
            android:id="@+id/FirstName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите Фамилию"
            />
        <EditText
            android:id="@+id/SecondName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите Вашу почту"
            />
        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите Ваш пароль"
            />
        <EditText
            android:id="@+id/pass1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Проверка пароля"
            />

        <EditText
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            />
        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пароли не совпадают"
            android:textColor="@color/red"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_singin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignIn"
                />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>